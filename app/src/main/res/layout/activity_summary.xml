<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Simpan.SummaryActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/tb_summary"
        android:layout_width="match_parent"
        android:layout_height="?actionBarSize"
        android:background="#007C90">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="?actionBarSize">

            <ImageView
                android:id="@+id/ic_back"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back_white"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/textView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="136dp"
                android:layout_toRightOf="@id/ic_back"
                android:fontFamily="@font/inter_medium"
                android:text="Rangkuman Topik"
                android:textColor="@color/white"
                android:textSize="18dp"
                app:layout_constraintBottom_toBottomOf="@+id/ic_back"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toEndOf="@+id/ic_back"
                app:layout_constraintTop_toTopOf="@+id/ic_back"
                app:layout_constraintVertical_bias="0.0" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.appcompat.widget.Toolbar>

    <LinearLayout
        android:id="@+id/ll_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/tb_summary"
        android:background="#007C90"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv_topikLearn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titleNext"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="32dp"
            android:layout_marginTop="20dp"
            android:fontFamily="@font/inter_medium"
            android:gravity="center"
            android:text="Menembus Rintangan untuk Belajar dan Menemukan Potensi Tersembunyi Anda"
            android:textColor="@color/white"
            android:textSize="18sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_titleNext"
            android:layout_centerInParent="true"
            android:layout_marginHorizontal="32dp"
            android:fontFamily="@font/inter_regular"
            android:gravity="center"
            android:text="Oleh Tim Personality"
            android:textColor="@color/white"
            android:textSize="12sp" />


        <Button
            android:id="@+id/btn_pelajari"
            android:layout_width="180dp"
            android:layout_height="40dp"
            android:layout_centerInParent="true"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/btn_bg_white"
            android:fontFamily="@font/inter_semibold"
            android:text="Ulangi Topik"
            android:textColor="@color/black"
            android:textSize="14sp"
            app:backgroundTint="@null"
            app:backgroundTintMode="@null" />
    </LinearLayout>

    <RelativeLayout
        android:id="@+id/rl_tag"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/ll_summary"
        android:padding="10dp">

        <ImageView
            android:id="@+id/ivNotes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_note"
            android:padding="5dp"
            android:src="@drawable/ic_note" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="7dp"
            android:layout_toRightOf="@id/ivNotes"
            android:fontFamily="@font/inter_semibold"
            android:text="Deni Alfian"
            android:textColor="@color/black"
            android:textSize="14sp" />

        <ImageView
            android:id="@+id/ivTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginTop="8dp"
            android:src="@drawable/ic_tag" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginRight="9dp"
            android:layout_toLeftOf="@id/ivTime"
            android:text="Personal Growth"
            android:textColor="@color/black"
            android:textSize="12sp" />

    </RelativeLayout>

    <TextView
        android:id="@+id/tv_summary"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rl_tag"
        android:fontFamily="@font/inter_medium"
        android:paddingHorizontal="10dp"
        android:text="Lorem ipsum dolor sit amet, consec tetur adipiscing elit. Nam condimentum tempus diam, ultricies Lorem ipsum dolor sit amet, consec tetur adipiscing elit. Nam condimentum tempus diam, ultricies Lorem ipsum dolor sit amet, consec tetur adipiscing elit. Nam condimentum tempus diam, ultricies Lorem ipsum dolor sit amet, consec tetur adipiscing elit. Nam condimentum tempus diam, ultricies "
        android:textColor="@color/black"
        android:textSize="18sp" />

</RelativeLayout>