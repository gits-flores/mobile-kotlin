<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.Profile.AboutAppsActivity"
    android:background="@color/body">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:id="@+id/rl_appsInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="20dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageButton
                android:id="@+id/backbtn"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@android:color/transparent"
                android:src="@drawable/ic_back"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="20dp"
                android:layout_toRightOf="@+id/backbtn"
                android:fontFamily="@font/inter_bold"
                android:text="Tentang Personalities"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/iv_appsLogo"
                android:layout_width="130dp"
                android:layout_height="130dp"
                android:layout_marginTop="90dp"
                android:layout_marginBottom="10dp"
                android:src="@drawable/blank_image"/>

            <TextView
                android:id="@+id/tv_appsname"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="100dp"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/iv_appsLogo"
                android:layout_below="@+id/backbtn"
                android:fontFamily="@font/inter_regular"
                android:textFontWeight="600"
                android:textColor="@color/black"
                android:textSize="24sp"
                android:text="Personalities"/>

            <TextView
                android:id="@+id/tv_appsVersions"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="30dp"
                android:layout_toEndOf="@id/iv_appsLogo"
                android:layout_below="@+id/tv_appsname"
                android:fontFamily="@font/inter_regular"
                android:textFontWeight="600"
                android:textSize="14sp"
                android:text="Version 1.0.0"/>

        </RelativeLayout>

        <TextView
            android:id="@+id/tv_persyaratanLayanan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            app:layout_constraintTop_toBottomOf="@id/rl_appsInfo"
            android:text="Persyaratan Layanan"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:paddingStart="13dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/bookmark_icon"/>

        <TextView
            android:id="@+id/tv_FAQ"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_persyaratanLayanan"
            android:layout_marginTop="20dp"
            android:text="Persyaratan Layanan"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:paddingStart="13dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_archive"/>

        <TextView
            android:id="@+id/tv_tim"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@id/tv_FAQ"
            android:layout_marginTop="20dp"
            android:text="Persyaratan Layanan"
            android:textColor="@color/black"
            android:drawableTint="@color/black"
            android:paddingStart="13dp"
            android:textSize="14sp"
            android:drawablePadding="5dp"
            app:drawableStartCompat="@drawable/ic_report"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>