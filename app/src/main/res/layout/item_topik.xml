<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <RelativeLayout
        android:id="@+id/rv_item_pg"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clickable="true"
        android:padding="16dp">

        <ImageView
            android:id="@+id/img_materi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_img_materi"
            android:padding="11dp"
            android:src="@drawable/ic_pg_one" />

        <TextView
            android:id="@+id/tv_judul_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/img_materi"
            android:fontFamily="@font/inter_medium"
            android:text="Menembus Rintangan untuk Belajar dan Menemukan Potensi Tersembunyi Anda"
            android:textColor="@color/black"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/tv_tim_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/tv_judul_module"
            android:layout_marginLeft="12dp"
            android:layout_toRightOf="@id/img_materi"
            android:fontFamily="@font/inter_regular"
            android:text="Oleh Tim Personality"
            android:textColor="#5D5F61"
            android:textSize="12sp" />

        <CheckBox
            android:id="@+id/img_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_materi"
            android:layout_marginTop="30dp"
            android:checked="true"
            android:button="@drawable/ic_save_article" />

        <TextView
            android:id="@+id/tv_status_module"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/img_materi"
            android:layout_alignParentRight="true"
            android:layout_marginTop="33dp"
            android:clickable="true"
            android:fontFamily="@font/inter_medium"
            android:text="@string/mulai"
            android:textColor="#007C90"
            android:textSize="14sp" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/rv_item_pg"
        android:background="#5D5F61" />

</RelativeLayout>
